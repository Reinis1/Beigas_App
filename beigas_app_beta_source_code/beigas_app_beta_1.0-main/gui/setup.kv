<setup>:
    Image:
        source: "images/desert.png"
        allow_stretch: True
        keep_ratio: False
        canvas:
            Color:
                rgba: 0, 0, 0, 0.8
            Rectangle:
                size: self.size
                pos: self.pos
    BoxLayout:
        orientation: 'vertical'
        Label:
            size_hint_y: 0.1
            text: 'izvelies klasi'
        ScrollView:
            size: root.size
            do_scroll_x: False
            do_scroll_y: True
            GridLayout:
                size: root.size
                size_hint_y: None
                cols: 1
                BoxLayout:
                    id: classes
                    orientation: 'vertical'
        BoxLayout:
            size_hint_y: 0.1
            Button:
                size_hint: 0.2, 1
                background_color: 'gray'
                font_name: "fonts/heydings_controls.ttf"
                text: "<" # H - maja L atslega X krusts C settings M meklet, + addt: "G" # H - maja L atslega X krusts C settings M meklet, + add
                on_press:
                    app.root.current = "set"
            Label:
                size_hint_x: 0.02
            Button:
                size_hint: 0.2, 1
                background_color: 'gray'
                font_name: "fonts/heydings_icons.ttf"
                text: "H"
                on_release:
                    root.home()
            Label:
                size_hint_x: 0.02
            Button:
                size_hint: 0.2, 1
                background_color: 'gray'
                font_name: "fonts/heydings_icons.ttf"
                text: "C"
                on_press:
                    app.root.current = "set"



